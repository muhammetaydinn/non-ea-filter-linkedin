{
  "manifest_version": 3,
  "name": "LinkedIn Easy Apply Filter",
  "version": "1.0.0",
  "description": "Hide Easy Apply jobs on LinkedIn to see only jobs that require traditional application process",
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/linkedin-easy-apply-filter"
} 